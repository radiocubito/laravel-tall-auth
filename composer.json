{
    "name": "radiocubito/laravel-tall-auth",
    "description": "A TALL (Tailwind CSS, Alpine.js, Laravel and Livewire) authentication for Laravel",
    "keywords": [
        "radiocubito",
        "laravel-tall-auth"
    ],
    "homepage": "https://github.com/radiocubito/laravel-tall-auth",
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Jiménez Servín",
            "email": "oliver@radiocubito.com",
            "homepage": "https://radiocubito.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "laravel/ui": "^2.0",
        "livewire/livewire": "^1.2",
        "radiocubito/laravel-blade-input": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.3",
        "phpunit/phpunit": "^9.0",
        "psalm/plugin-laravel": "^1.2",
        "vimeo/psalm": "^3.11",
        "nunomaduro/collision": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "Radiocubito\\TallAuth\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Radiocubito\\TallAuth\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Radiocubito\\TallAuth\\TallAuthServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
